<!DOCTYPE html>
<html>
  <head>
    <title>
      <%= @service.name %>
    </title>
    <meta http-equiv="Content-type" content="text/html;charset=UTF-8">
    <link rel="stylesheet" type="text/css" href="<%= css_path %>" />
  </head>
  <body>
    <div id="page">
      <div id="content">
        <h1>
          <%= @service.name %>
        </h1>

        <div id="nav">
          <% if @service.meta_service %>
            <a href="<%= index_path %>">
              &#187; <%= @service.meta_service.name %>
            </a>
          <% end %>
        </div>

        <%= description %>

        <%= tag_with_anchor('h2', 'Endpoints') %>

        <% endpoints.each do |endpoint_ary| %>
          <%= tag_with_anchor('h3', endpoint_ary.first.prefix) %>
          <ul>
          <% endpoint_ary.each do |endpoint| %>
            <li>
              <a href="<%= endpoint.url %>">
                <%= render_erb("shared/endpoint_name.html.erb", endpoint.get_binding) %>
              </a>
            </li>
          <% end %>
          </ul>
        <% end %>

        <% if discussion %>
          <%= tag_with_anchor('h2', 'Discussion') %>
          <%= discussion %>
        <% end %>
      </div>
    </div>
  </body>
</html>

