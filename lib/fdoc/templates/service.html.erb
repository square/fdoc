<!DOCTYPE html>
<html>
  <head>
    <title><%= @service.name %></title>
    <link rel="stylesheet" type="text/css" href="<%= css_path %>" />
    <script type="text/javascript" src="<%= js_path %>"></script>
  </head>
  <body>
    <div class="navbar navbar-fixed-top">
      <div class="navbar-inner">
        <div class="container">
          <a class="brand" href="<%= html_directory %>">API Documentation</a>
        </div>
      </div>
    </div>

    <div id="page">
      <div id="content">
        <h1><%= @service.name %></h1>

        <ul class="breadcrumb">
          <% if @service.meta_service %>
            <li><a href="<%= index_path %>"><%= @service.meta_service.name %></a></li>
          <% end %>
        </ul>

        <%= description %>

        <%= tag_with_anchor('h2', 'Endpoints') %>

        <% endpoints.each do |endpoint_ary| %>
          <%= tag_with_anchor('h3', endpoint_ary.first.prefix) %>
          <ul>
            <% endpoint_ary.each do |endpoint| %>
              <li>
                <%= endpoint.name_as_link %>
              </li>
            <% end %>
          </ul>
        <% end %>

        <% if discussion %>
          <%= tag_with_anchor('h2', 'Discussion') %>
          <%= discussion %>
        <% end %>
      </div>
      </div>
  </body>
</html>
